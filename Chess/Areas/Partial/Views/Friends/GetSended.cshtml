
@model List<UserFriendViewModel>

<div class="friends">
	@if (Model.Count == 0)
	{
		<p>There are no sended requests</p>
	}
	else
	{
		foreach(var item in Model)
		{
			<img src="@item.AvatarPath" alt="Avatar" class="profile-photo rounded-circle" height="30" /><a href="/Game/Friends/Profile/@item.Id"/>
			<a asp-area="Game" asp-controller="Friends" asp-action="profile" asp-route-id="@item.Id">
				@item.UserName
			</a>
			<button class="btn btn-danger" onclick="RecallAjax('@item.Id')">Recall</button>
		}
	}		
</div>
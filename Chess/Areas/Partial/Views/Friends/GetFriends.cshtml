
@model List<UserFriendViewModel>

<div class="friends">
	@if (Model.Count == 0)
	{
		<p>There are no friends</p>
	}
	else
	{



		@foreach (var item in Model)
		{
			<div class="friend">
				<img src="@item.AvatarPath" alt="Avatar" class="profile-photo rounded-circle" height="30" />
				<a asp-area="Game" asp-controller="Friends" asp-action="profile" asp-route-id="@item.Id">
					<div>@item.UserName</div>
				</a>
				<button class="btn btn-danger" onclick="RemoveFriendAjax('@item.Id')">Remove from friends</button>
			</div>
		}
	}
</div>


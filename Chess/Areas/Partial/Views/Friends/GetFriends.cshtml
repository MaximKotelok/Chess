
@model List<UserFriendViewModel>

<ul class="user-list container">
	@if (Model.Count == 0)
	{
		<li>There are no friends</li>
	}
	else
	{

		@foreach (var item in Model)
		{
			<li class="user-list-item">
				<div>
					<img src="@item.AvatarPath" alt="Avatar" class="profile-photo rounded-circle" height="30" />
					<a asp-area="Game" asp-controller="Friends" asp-action="profile" asp-route-id="@item.Id" class="user-link">@item.UserName</a>
				</div>
				<div class="btn-container">
					<button class="btn btn-danger" onclick="RemoveFriendAjax('@item.Id')">Remove from friends</button>
				</div>
			</li>
		}
	}
</ul>


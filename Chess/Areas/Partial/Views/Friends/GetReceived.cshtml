@model List<UserFriendViewModel>

<div class="friends">
	@if (Model.Count == 0)
	{
		<p>There are no received requests</p>
	}
	else
	{
		foreach (var item in Model)
		{
			<img src="@item.AvatarPath" alt="Avatar" class="profile-photo rounded-circle" height="30" />

			<a href="/Game/Friends/Profile/@item.Id" />
			<a asp-area="Game" asp-controller="Friends" asp-action="profile" asp-route-id="@item.Id">
				@item.UserName
			</a>
			<button class="btn btn-success" onclick="AcceptAjax('@item.Id')">Accept</button>
			<button class="btn btn-danger" onclick="RejectAjax('@item.Id')">Reject</button>
		}
	}
</div>